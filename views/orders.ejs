<!DOCTYPE html>
<html>
<head>
  <title>Roasted</title>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/orders.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/orders.js"></script>
</head>
<body>
  <div class="order-body">
    <main class="container">
      <section class="orders-container">
        <% Object.keys(orders)forEach((order) => {%>
            <article class="order">
              <header>Order: <% order.id%></header>
              <div class="order-body">
                <p class="customer-container">Customer: <%= order.name%></p>
                <p class="customer-timer">Timer: order.estimated_time</p>
                <button>Finish</button>
              </div>
            </article>
        <%});%>
